@if (!IsLoading || Categories.Count > 0)
{

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories)
                {
                    <tr>
                        <td style="width:80%" class="align-middle">
                            @category.Name
                        </td>
                        <td style="width:10%" class="align-middle">
                            <button type="button" class="btn btn-info" @onclick="() => RedirectToUpdate(category.Id)">Update</button>
                        </td>
                        <td style="width:10%" class="align-middle">
                            <button type="button" class="btn btn-danger" @onclick="() => OnDeleted.InvokeAsync(category.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <div class="modal show" tabindex="-1" role="dialog" style="display:block">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Please wait...</h5>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border text-success" style="margin-top: 50px; margin-bottom: 50px; width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (!IsLoading && Categories.Count < 1)
{
    <span class="h3">
        No results...
    </span>
}
