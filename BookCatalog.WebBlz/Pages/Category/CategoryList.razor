@page "/categories"
@using BookCatalog.WebBlz.Components;

<div class="row">
    <div class="col-md-10">
        @*Place for search and sort*@
        <Search OnSearchChanged="SearchChanged" />
    </div>
    <div class="col-md-2">
        <a href="/createCategory">Create Category</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <CategoryTable Categories="_itemsList" IsLoading="_isLoading"  OnDeleted="DeleteCategory" />
    </div>
</div>
<div class="row">
    <div class="col">
        <Pagination MetaData="_pagingMetaData" Spread="2" SelectedPage="SelectedPage" />
    </div>
</div>

<YesNoModal @ref="_yesNoModal" Confirmed="CategoryDeletionConfirmed" />