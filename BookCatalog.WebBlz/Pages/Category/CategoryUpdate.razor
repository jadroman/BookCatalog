@page "/category/{id}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<main>
    @if (_category != null)
    {
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-auto mb-1 mt-2">
                        <h2>Update category</h2>
                    </div>
                </div>
                <EditForm Model="_category" autocomplete="off" OnValidSubmit="Update" class="card card-body bg-light mt-1">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <label for="name" class="col-form-label">Name:</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <InputText id="name" class="form-control" @bind-Value="_category.Name" />
                                <ValidationMessage For="@(() => _category.Name)" />
                            </div>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-sm-auto">
                            <button type="button" class="btn btn-primary" @onclick="CancelUpdate">Cancel</button>
                        </div>
                        <div class="col-sm-auto">
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</main>