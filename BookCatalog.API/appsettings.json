{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BookCatalogConnection": "Server=(localdb)\\MSSQLLocalDB;Database=BookCatalogWebApi1;MultipleActiveResultSets=True"
  },
  "JWTSettings": {
    "securityKey": "BookCatalogSecretKey",
    "validIssuer": "http://localhost:5001",
    "validAudience": "http://localhost:4200",
    "expiryInMinutes": 5
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=(localdb)\\MSSQLLocalDB;Database=BookCatalogWebApi1;Trusted_Connection=True;MultipleActiveResultSets=true",
          "tableName": "Log",
          "autoCreateSqlTable": false
        }
      }
    ]
  }
}
